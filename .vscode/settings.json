{
  // 禁用 prettier，使用 eslint 的代码格式化
  "prettier.enable": false,
  // 保存时自动格式化
  "editor.formatOnSave": false,
  // 移除 ESLint 相关自动修复与校验配置
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never"
  },
  // 消除json文件中的注释警告
  "files.associations": {
    "manifest.json": "jsonc",
    "pages.json": "jsonc"
  },
  // 消除Unknown at rule @apply警告
  "css.customData": [
    ".vscode/unocss.json"
  ],
  "i18n-ally.localesPaths": [
    "src/locales",
    "src/locales/langs"
  ]
}
